Config {
         font = "xft:WenQuanYi Micro Hei Mono:pixelsize=16"
       , additionalFonts = [ "xft:Font Awesome 5 Free Solid:pixelsize=16" ]
       , bgColor = "#222"
       , fgColor = "#dfdfdf"
       , commands = [ Run Cpu ["-t", "<fn=1></fn> <vbar> <total>%", "-p", "3"] 10
                    , Run Memory ["-t","<fn=1></fn> <usedvbar> <usedratio>%", "-p", "2"] 10
                    , Run DiskU [("/", "<fn=1></fn> <usedp>%")] ["-p", "2"] 100
                    , Run DynNetwork ["-t", "<fn=1></fn><tx> <fn=1></fn><rx>", "-w", "4"] 10
                    , Run Date "%a %m-%d %X" "date" 10
		    , Run Com "checkmail" [] "" 100
                    , Run StdinReader
                    ]
       , template = "%StdinReader% }{ %checkmail% | %dynnetwork% | %cpu% | %memory% | %disku% | %date%"
       }
