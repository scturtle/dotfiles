Config {
	 font = "xft:Vera Sans:pixelsize=16"
       , bgColor = "black"
       , fgColor = "grey"
       , position = Top
       , commands = [ Run Cpu ["-t", "cpu: <vbar> "] 10 -- <total>%
                    , Run Memory ["-t","mem: <usedvbar>"] 10 -- <usedratio>%
                    , Run DiskU [("/", "disk: <usedvbar>")] [] 60 -- <usedp>%
                    , Run DynNetwork ["--template", "<tx>kB/s <rx>kB/s"] 10
                    , Run Date "%a %m/%d %X" "date" 10
                    , Run StdinReader
                    ]
       , sepChar = "%"
       , alignSep = "}{"
       , template = " %StdinReader% }{ %cpu%  |  %memory%  |  %disku%  |  %dynnetwork%  |  %date% "
       }
